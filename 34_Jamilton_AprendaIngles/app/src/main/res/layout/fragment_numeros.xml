<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context=".Fragment.NumerosFragment">


    <ImageButton
        android:id="@+id/imageViewNumber1"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/fundo"
        android:scaleType="centerCrop"
        android:src="@drawable/number1"
        app:layout_constraintEnd_toStartOf="@+id/imageViewNumber2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageViewNumber2"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/fundo"
        android:scaleType="centerCrop"
        android:src="@drawable/number2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageViewNumber1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageViewNumber3"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/fundo"
        android:scaleType="centerCrop"
        android:src="@drawable/number3"
        app:layout_constraintEnd_toStartOf="@+id/imageViewNumber4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewNumber1" />

    <ImageButton
        android:id="@+id/imageViewNumber4"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/fundo"
        android:scaleType="centerCrop"
        android:src="@drawable/number4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageViewNumber1"
        app:layout_constraintTop_toBottomOf="@+id/imageViewNumber2" />

    <ImageButton
        android:id="@+id/imageViewNumber5"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/fundo"
        android:scaleType="centerCrop"
        android:src="@drawable/number5"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/imageViewNumber6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewNumber3" />

    <ImageButton
        android:id="@+id/imageViewNumber6"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/fundo"
        android:scaleType="centerCrop"
        android:src="@drawable/number6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageViewNumber5"
        app:layout_constraintTop_toBottomOf="@+id/imageViewNumber4" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/direitos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>